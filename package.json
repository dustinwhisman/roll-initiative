{
  "name": "roll-initiative",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "author": "Dustin Whisman",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prestart": "npm run clean",
    "prebuild": "npm run clean",
    "start": "run-p eleventy:dev js:dev",
    "build": "run-s eleventy:build js:build",
    "eleventy:dev": "eleventy --serve --incremental",
    "eleventy:build": "eleventy",
    "js:dev": "esbuild src/js/main.js --format=esm --bundle=true --splitting=true --outdir=dist --watch --sourcemap=inline",
    "js:build": "esbuild src/js/main.js --format=esm --bundle=true --splitting=true --outdir=dist --minify=true",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint \"src/**/*.{css,scss,sass}\" --color --formatter verbose",
    "lint:js": "DEBUG=eslint:cli-engine eslint .",
    "test": "echo \"TODO: add support for testing\" && exit 0",
    "update-deps": "ncu -u && npm install"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "dotenv": "^16.3.1",
    "esbuild": "^0.18.6",
    "eslint": "^8.43.0",
    "npm-check-updates": "^16.10.12",
    "npm-run-all": "^4.1.5",
    "stylelint": "^15.8.0",
    "stylelint-config-standard": "^33.0.0"
  }
}
